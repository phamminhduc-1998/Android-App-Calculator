<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imglogo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/tvShow"
        android:layout_marginTop="20dp" />


    <TableRow android:layout_marginTop="30dp">

        <Button
            android:onClick="button1"
            android:text="1" />

        <Button
            android:onClick="button2"
            android:text="2" />

        <Button
            android:onClick="button3"
            android:text="3" />

        <Button
            android:onClick="buttonCong"
            android:text="+" />
    </TableRow>

    <TableRow>

        <Button
            android:onClick="button4"
            android:text="4" />

        <Button
            android:onClick="button5"
            android:text="5" />

        <Button
            android:onClick="button6"
            android:text="6" />

        <Button
            android:onClick="buttonTru"
            android:text="-" />
    </TableRow>

    <TableRow>

        <Button
            android:onClick="button7"
            android:text="7" />

        <Button
            android:onClick="button8"
            android:text="8" />

        <Button
            android:onClick="button9"
            android:text="9" />

        <Button
            android:onClick="buttonNhan"
            android:text="*" />
    </TableRow>

    <TableRow>

        <Button
            android:onClick="buttonReset"
            android:text="C" />

        <Button
            android:onClick="button0"
            android:text="0" />

        <Button
            android:onClick="buttonBang"
            android:text="=" />

        <Button
            android:onClick="buttonChia"
            android:text="/" />
    </TableRow>

</TableLayout>